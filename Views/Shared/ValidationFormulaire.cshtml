@model TPLOCAL1.Models.FormulaireModel
@{
    ViewData["Title"] = "ValidationFormulaire";
}
<!DOCTYPE html>
<html>
<head>
    <title>Page de Validation</title>
    <link rel="stylesheet" href="~/ressources/Index.css" />
</head>
<body>
    <header>
        <img src="~/ressources/GroupeHN.png" class="image" alt="GroupeHN" />
        <h1>Page de validation</h1>
    </header>
    <nav>
        <ul>
            <li><a href="/Home/Index/Index">Acceuil</a></li>
            <li><a href="/Home/Index/Listeavis">Liste avis</a></li>
        </ul>
    </nav>
    <p>Votre formulaire a bien été pris en compte.</p>
    @{
        var formulaire = ViewData["Formulaire"] as FormulaireModel;
    }
    <table>
        <caption align="top">
            Informations personnelles
        </caption>
        <tr>
            <td>Nom</td>
            <td>@formulaire.Nom</td>
        </tr>
        <tr>
            <td>Prénom</td>
            <td>@formulaire.Prenom</td>
        </tr>
        <tr>
            <td>Sexe</td>
            <td>@formulaire.Sexe</td>
        </tr>
        <tr>
            <td>Adresse</td>
            <td>@formulaire.Adresse</td>
        </tr>
        <tr>
            <td>Code Postal</td>
            <td>@formulaire.CodePostal</td>
        </tr>
        <tr>
            <td>Ville</td>
            <td>@formulaire.Ville</td>
        </tr>
        <tr>
            <td>Adresse mail</td>
            <td>@formulaire.Mail</td>
        </tr>
    </table>
    <table>
        <caption align="top">
            Informations formation suivie
        </caption>
        <tr>
            <td>Date début formation</td>
            <td>@formulaire.DateDebFormation</td>
        </tr>
        <tr>
            <td>Formation suivie</td>
            <td>@formulaire.TypeFormation</td>
        </tr>
    </table>
    <table>
        <caption align="top">
            Avis sur la formation
        </caption>
        <tr>
            <td>Formation Cobol</td>
            <td>@formulaire.Cobol</td>
        </tr>
        <tr>
            <td>Formation C#</td>
            <td>@formulaire.Csharp</td>
        </tr>
    </table>
</body>
</html>

@{
    Layout = null;
}